<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivRestaurantImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Restaurant Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF222222"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/ivRestaurantImage"
            app:layout_constraintTop_toTopOf="@id/ivRestaurantImage"
            app:layout_constraintEnd_toStartOf="@id/tvBadge" />


        <TextView
            android:id="@+id/tvCuisine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:text="Cuisine • Fast Food"
            android:textColor="#FF666666"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/ivRestaurantImage"
            app:layout_constraintTop_toBottomOf="@id/tvRestaurantName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:text="★ 4.5"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/ivRestaurantImage"
            app:layout_constraintTop_toBottomOf="@id/tvCuisine" />

        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="Top Rated"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_badge"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivRestaurantImage" />


        <TextView
            android:id="@+id/tvTimeAndPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="25 min • ₹200"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/tvRating"
            app:layout_constraintBaseline_toBaselineOf="@id/tvRating" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
